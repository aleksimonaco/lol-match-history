{% extends "base.twig" %}

{% block title %}Lolperformance{% endblock %}

{% block content %}

    <div class="container">

        <h2 class="row page-header">Welcome to LolPerformance! <wbr/><small>Check how you've performed lately</small></h2>

        <div class="row search-wrapper">
            <form class="col-xs-12 col-sm-10 col-md-8 col-lg-7"action="{{ DOMAIN }}/search" method="POST">
                <div class="col-xs-12 col-sm-8 search-text-wrapper">
                    <label class="col-xs-12 col-sm-5 search-label" for="search-text">Summoner name:</label>
                    <div class="col-xs-12 col-sm-7 search-input">
                        <input id="search-text" class="form-control" name="search_keyword" type="text" />
                    </div>
                </div>
                <div class="col-xs-12 col-sm-4 search-button-wrapper">
                    <input id="search-button" class="form-control btn btn-success" name="submit" type="submit" value="Search" />
                </div>
            </form>
        </div>

        <div class="row results-wrapper">
            <div class="summoner-wrapper col-xs-12">
                <div class="col-xs-4 col-sm-2 summoner-icon" style="background-image: url('http://ddragon.leagueoflegends.com/cdn/5.24.2/img/profileicon/{{ summoner.profileIconId }}.png');background-size: cover;">
                    <span class="summoner-level">{{ summoner.summonerLevel }}</span>
                </div>
                <h3 class="col-sm-5 summoner-name">{{ summoner.name }}</h3>
                <h3 class="col-sm-5 summoner-name">something interesting</h3>
                <h3 class="col-sm-5 summoner-name">Silver III (Focking n00b)</h3>
                <h3 class="col-sm-5 summoner-name">something interesting</h3>
            </div>
        </div>
    </div>
{% endblock %}
